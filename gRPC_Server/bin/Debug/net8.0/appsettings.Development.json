{
  // Configurações de logging para um servidor gRPC em uma aplicação ASP.NET Core.
  "Logging": {
    // Define os níveis de log para diferentes partes da aplicação.
    "LogLevel": {
      // Nível padrão de log para categorias não especificadas explicitamente.
      "Default": "Information",

      // Define o nível de log para mensagens do namespace Microsoft.AspNetCore.
      // Apenas mensagens de Warning ou superior serão registradas para este namespace.
      "Microsoft.AspNetCore": "Warning",

      // Define o nível de log para mensagens do namespace Microsoft.AspNetCore.Hosting.
      // Mensagens informativas relacionadas ao ambiente de hospedagem serão registradas.
      "Microsoft.AspNetCore.Hosting": "Information",

      // Define o nível de log para mensagens do namespace Microsoft.AspNetCore.Routing.EndpointMiddleware.
      // Mensagens informativas do middleware de roteamento serão registradas.
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Information"
    }
  }
}